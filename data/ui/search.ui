<interface>
  <template class="SearchBox" parent="GtkBox">
    <style>
      <class name="linked"/>
    </style>
    <child>
      <object class="GtkSearchEntry" id="search_entry">
        <property name="placeholder-text" translatable="yes">Search Wikipedia</property>
        <child>
          <object class="GtkLabel" id="lang_label">
            <property name="sensitive">false</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkMenuButton" id="settings_button">
        <property name="icon-name">pan-down-symbolic</property>
        <property name="tooltip-text" translatable="yes">Search Settings</property>
      </object>
    </child>
  </template>
</interface>
